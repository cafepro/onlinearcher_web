<p id="notice"><%= notice %></p>

<h1>Listing Score Types</h1>

<table>
  <thead>
    <tr>
      <th>Score</th>
      <th>Name</th>
      <th>Arrows</th>
      <th>Distance 1</th>
      <th>Distance 2</th>
      <th>Distance 3</th>
      <th>Distance 4</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @score_types.each do |score_type| %>
      <tr>
        <td><%= score_type.score_id %></td>
        <td><%= score_type.name %></td>
        <td><%= score_type.arrows %></td>
        <td><%= score_type.distance_1 %></td>
        <td><%= score_type.distance_2 %></td>
        <td><%= score_type.distance_3 %></td>
        <td><%= score_type.distance_4 %></td>
        <td><%= score_type.published %></td>
        <td><%= link_to 'Show', score_type %></td>
        <td><%= link_to 'Edit', edit_score_type_path(score_type) %></td>
        <td><%= link_to 'Destroy', score_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

